{
  "name": "which-files-changed",
  "module": "index.ts",
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "bun-types": "latest",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "ncc build src/index.ts -o dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,jsx,tsx}": "prettier --write --ignore-unknown"
  },
  "type": "module"
}
